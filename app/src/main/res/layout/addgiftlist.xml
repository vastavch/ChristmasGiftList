<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_imagename"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_gift"
        android:layout_toEndOf="@+id/image_gift"
        android:layout_marginTop="23dp"
        android:textStyle="italic"
        android:textColor="#3610f2" />

    <TextView
        android:id="@+id/textView_imageprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:textColor="#f80ac4" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/image_gift" />

</RelativeLayout>